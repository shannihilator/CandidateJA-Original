<%= stylesheet_link_tag "application.css" %>

<div id="root">

<h1> SalesLoft: Level 1 </h1>

    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Job Title</th>
        </tr>
        <% @first_name.zip($email_address, @title).each do |name, email, title| %>
        <tr>
            <td><%= name %></td>
            <td style="padding: 0px 30px 0px 30px;"><%= email %></td>
            <td><%= title %></td>
        </tr>
        <% end %>
    </table>

<h1> SalesLoft: Level 2 </h1>

    <div>
        <table>
            <tr>
                <th>Character</th>
                <th>Count</th>
            </tr>
        <% @frequency.each do |k, v| %>
            <tr>
                <td><%= k %></td>
                <td><%= v %></td>
            </tr>
        <% end %>
    </div>

    <%= link_to 'Call Action', main_display_path, method: :post %>

</div>