<%= stylesheet_link_tag "application.css" %>

<div id="root">

<h1> SalesLoft: Level 1 </h1>

    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Job Title</th>
        </tr>
        <% @first_name.zip($email_address, @title).each do |name, email, title| %>
        <tr>
            <td><%= name %></td>
            <td style="padding: 0px 30px 0px 30px;"><%= email %></td>
            <td><%= title %></td>
        </tr>
        <% end %>
    </table>

<h1> SalesLoft: Level 2 </h1>

    <%= button_to 'Display Frequencies', main_displayFreq_path, method: :get %>

</div>